<!-- Site Name -->
<div class="sitename">
  <div class="container">
     <%= link_to "SKILL HOUSE", root_path, id: "logo" %>
  </div>
</div>
 
<!-- Static navbar -->
<div class="navbar navbar-default main" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
    </div>
   <div class="navbar-collapse collapse">
     <ul class="nav navbar-nav top-view">
        <li><%= link_to "トップページ",    root_path %></li>
        <li><%= link_to "当サイトの目的", help_path %></li>
         <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               物件情報<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "一覧", properties_path %></li>
              <li><%= link_to "新規登録", new_property_path %></li>
              <li class="divider"></li>
              <li><%= link_to "検索ページ", root_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               アカウント<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "登録情報", current_user %></li>
              <li><%= link_to "編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ユーザー新規登録",  signup_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
     </ul>
   </div><!--/.nav-collapse -->
 </div>
</div>