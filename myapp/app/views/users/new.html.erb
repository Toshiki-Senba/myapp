<% provide(:title, "ユーザー新規登録") %>
<h1>ユーザーを新しく作る</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render "shared/error_messages" %>

        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, class: "form-control user-forms", :placeholder => "スキル太郎" %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control user-forms", :placeholder => "skill_nobasu@gmail.com"%>

        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control user-forms", :placeholder => "パスワードを入れてください" %>

        <%= f.label :password_confirmation, "パスワード再確認" %>
        <%= f.password_field :password_confirmation, class: "form-control user-forms", :placeholder =>"再度パスワードを入れてください" %>

        <%= f.submit "ユーザーを登録する", class: "btn btn-primary" %>
      <% end %>
   </div>
</div>