<% provide(:title, "部屋情報登録") %>
<h1>部屋情報を入力してください</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: [@room, @property], local: true) do |f| %>
        <%= render "shared/error_room_messages", object: f.object %>
       <div class="field">
        <%= f.label :vacant_room, "空室状況" %>
        <%= f.select :vacant_room, ['空室','満室'],
                                { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>

        <%= f.label :room_number, "部屋番号" %>
        <%= f.text_field :room_number, class: 'form-control', :placeholder => "例: 201" %>

        <%= f.label :room_number, "広さ" %>
        <%= f.text_field :room_number, class: 'form-control', :placeholder => "例: 10.7" %>

        <%= f.label :room_type, "お部屋のタイプ" %>
        <%= f.select :room_type,  ['個室', 'ドミトリー', 'ルームシェア'],
                             { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>

        <%= f.label :room_img, "お部屋の写真" %>
        <%= f.file_field :room_img, class: 'form-control' %>
       
        <%= f.submit "部屋情報登録", class: "btn btn-primary" %>
        </div>
     <% end %>
  </div>
</div>