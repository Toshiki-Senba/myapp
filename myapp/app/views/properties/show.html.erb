<% provide(:title, @property.house_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @property.house_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @property.rooms.any? %>
      <h3>部屋情報一覧 (<%= @property.rooms.count %>)件</h3>
      <ol class="rooms">
        <%= render @rooms %>
      </ol>
      <%= will_paginate @rooms %>
    <% end %>
</div>